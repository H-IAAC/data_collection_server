<div class="center">
    <h1>Coletas</h1>
</div>
<div>
    <% for (var i=0; i < coletas.length; i++) { %>
            <div class="center">
                <div class="card">
                    <div class="card-container">
                        <h3>
                            <b>
                                <%= coletas[i].label %>
                            </b>
                            <i onclick="onClickDelete('<%= coletas[i].label %>')" class="material-icons"
                                style="float: right;">delete_forever</i>
                        </h3>
                        <p>
                            <%= new Date(coletas[i].time).toString() %>
                        </p>
                        <p>
                            <a onclick="onClickCard('<%= coletas[i].label %>')" href="#">Conte√∫do: <%=
                                    coletas[i].content %>
                                    arquivos</a>
                        </p>
                        <% if (coletas[i].error > 0) { %>
                            <p style="background-color:red; text-align: center;">Post Processor Error! Check the 'err.log' file.</p>
                        <% } %>
                        <% if (coletas[i].videoAvailable == "") { %>
                            <p><button disabled>Watch</button></p>
                        <% } else { %>
                            <p><button onclick="onClickWatch('<%= coletas[i].label %>')">Watch</button></p>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } %>
</div>
<section class="bottom">
    <div class="center">
        <button onclick="window.history.back()" class="btn">Back</button>
    </div>
</section>

<script type="text/javascript">

    function onClickCard(label) {
        window.location.href = '/coletas/download?label=' + encodeURI(label);
    }

    function onClickWatch(label) {
        window.location.href = '/coletas/watch?label=' + encodeURI(label);
    }

    function onClickDelete(label) {
        let text = "Remover arquivos relacionados ao " + label + "?";
        if (confirm(text) == true) {
            alert('TODO');
        }
    }

</script>